#!/usr/bin/env bash

# GLOBAL
INITRAMFS=$(rpm-ostree initramfs)

# Regenerate initramfs for module blacklists to work & apply LUKS partition trim fix
if [[ $INITRAMFS =~ "disabled" ]]; then
  echo "Found needed initramfs changes, applying."
  plymouth display-message --text="Updating initramfs - Please wait" || true
  rpm-ostree initramfs --enable --arg=-I --arg=/etc/crypttab --reboot
fi
